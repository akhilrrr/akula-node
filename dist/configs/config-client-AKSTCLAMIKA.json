{
  "clientId": "AKSTCLAMIKA",
  "domain": "amika-store.com",
  "enabled": true,
  "mode": "report-only", 
  "layers": {
    "static": true,
    "domShield": true,
    "behavioral": true
  },
  "thresholds": {
    "behavioralScoreWarn": 5,
    "behavioralScoreBlock": 10
  },
  "whitelist": {
