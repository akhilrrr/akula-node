    "scriptSrc": ["cdn.shopify.com", "google-analytics.com"],
    "iframeHosts": ["youtube.com", "vimeo.com"],
    "globals": ["Shopify", "jQuery"]
  },
  "reporting": {
    "endpoint": "https://akula-report-endpoint.zoetehemel.workers.dev/report",
    "batchIntervalMs": 10000,
    "sampleRate": 1.0
  }
}
